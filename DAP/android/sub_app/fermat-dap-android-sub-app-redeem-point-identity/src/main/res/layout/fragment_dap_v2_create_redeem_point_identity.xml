<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9">

    <RelativeLayout
        android:id="@+id/redeem_image_background"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_v2_circular_other_profile"
        android:gravity="center">

        <ImageView
            android:id="@+id/dap_v2_redeem_point_image"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#00000000"
            android:contentDescription="ignore"
            android:src="@drawable/no_profile_image" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dap_v2_redeem_point_info_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/redeem_image_background"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:color/transparent">

        <EditText
            android:id="@+id/dap_v2_redeem_point_name"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:hint="Username"
            android:lines="1"
            android:maxLength="25"
            android:singleLine="true"
            android:textColor="#009688"
            android:textColorHint="#b3b3b3"
            android:theme="@style/editTextThemeRedeemPoint"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/dap_v2_redeem_point_contact_information"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dap_v2_redeem_point_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:hint="Contact information"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#009688"
            android:textColorHint="#b3b3b3"
            android:theme="@style/editTextThemeRedeemPoint"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/dap_v2_redeem_point_country_name"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dap_v2_redeem_point_contact_information"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:hint="Country Name"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#009688"
            android:textColorHint="#b3b3b3"
            android:theme="@style/editTextThemeRedeemPoint"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/dap_v2_redeem_point_address_province_name"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dap_v2_redeem_point_country_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:hint="Province Name"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#009688"
            android:textColorHint="#b3b3b3"
            android:theme="@style/editTextThemeRedeemPoint"
            android:textSize="15sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/dap_v2_redeem_point_address_city_name"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dap_v2_redeem_point_address_province_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:hint="City Name"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#009688"
            android:textColorHint="#b3b3b3"
            android:theme="@style/editTextThemeRedeemPoint"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/dap_v2_redeem_point_address_postal_code"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dap_v2_redeem_point_address_city_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:hint="Postal Code"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#009688"
            android:textColorHint="#b3b3b3"
            android:theme="@style/editTextThemeRedeemPoint"
            android:textSize="15sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/dap_v2_redeem_point_address_street_name"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dap_v2_redeem_point_address_postal_code"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:hint="Street Name"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#009688"
            android:textColorHint="#b3b3b3"
            android:theme="@style/editTextThemeRedeemPoint"
            android:textSize="15sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/dap_v2_redeem_point_address_house_number"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dap_v2_redeem_point_address_street_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:gravity="center"
            android:hint="House Number"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#009688"
            android:textColorHint="#b3b3b3"
            android:theme="@style/editTextThemeRedeemPoint"
            android:textSize="15sp"
            android:visibility="gone" />


    </RelativeLayout>

    <ImageButton
        android:id="@+id/dap_v2_redeem_point_button"
        android:layout_width="112dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/redeem_image_background"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/redeem_image_background"
        android:layout_marginBottom="30dp"
        android:background="@drawable/boton_inactivo" />
</RelativeLayout>
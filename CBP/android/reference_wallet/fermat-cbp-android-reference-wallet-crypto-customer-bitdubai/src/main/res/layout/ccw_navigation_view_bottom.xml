<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_alignParentBottom="true"
    android:padding="10dp"
    tools:background="@drawable/ccw_navigation_drawer_background">

    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
        android:id="@+id/ccw_navigation_view_fermat_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/fermat_balance"
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
        android:id="@+id/ccw_navigation_view_fermat_balance"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:text="385.467 FER"/>

    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
        android:id="@+id/ccw_navigation_view_bitcoin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ccw_navigation_view_fermat_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/ccw_navigation_view_bitcoin_balance"
        android:textColor="@color/white"
        android:textSize="14sp"/>


    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
        android:id="@+id/ccw_navigation_view_bitcoin_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ccw_navigation_view_fermat_balance"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:text="0.32565 BTC"/>

    <ImageView
        android:id="@+id/ccw_wallet_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/ccw_navigation_view_bitcoin_name"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ccw_logo_customer_wallet_navigation_drawer"
        tools:ignore="contentDescription"/>

</RelativeLayout>
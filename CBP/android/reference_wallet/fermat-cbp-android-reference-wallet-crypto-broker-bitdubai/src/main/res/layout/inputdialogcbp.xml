<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:textColor="#00a99d"
    android:background="@drawable/rounded_corners">

    <View
        android:id="@+id/view_color"
        android:layout_width="match_parent"
        android:layout_height="4.5dp"
        android:background="@drawable/round_corner_line_dialog"
        android:fitsSystemWindows="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingEnd="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingStart="1dp"
        android:paddingTop="20dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_title"
                    android:text="Create Bank and Account"
                    android:paddingLeft="5dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#00a99d"
                    app:typeface="CAVIAR_DREAMS_BOLD"
                    android:gravity="center_horizontal"

                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.4"
                    android:id="@+id/img_icon"
                    android:paddingBottom="2dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/round_corner_line_dialog"
                android:layout_marginBottom="12dp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/image_banner"
                    android:scaleType="fitXY"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="7dp"
                    android:layout_weight="0.54"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Bank name"
                        android:id="@+id/textView"
                        android:layout_weight="0.06"
                        android:textColor="#000"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextBankName"
                        android:layout_weight="1"
                        android:textColor="#000"

                        />

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:padding="10dip"
                android:textColor="#000"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:text="Bank type"
                    android:textColor="#000"
                    android:id="@+id/textView5"
                    android:layout_weight="40.20" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner2Bank"
                    android:text="Bank"
                    android:theme="@style/Base.TextAppearance.AppCompat.Button"
                    android:textColor="#000000"
                    android:backgroundTint="#a5a5a5"
                    android:backgroundTintMode="add"
                    android:background="#c2c2c2"
                    android:foregroundTint="#000000"
                    android:foregroundTintMode="add"
                    android:layout_weight="5.21" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="7dp"
                android:layout_weight="0.54" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Alias"
                    android:id="@+id/textView2"
                    android:layout_weight="0.06"
                    android:textColor="#000"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/AccountAlias"
                    android:layout_weight="1"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="7dp"
                android:layout_weight="0.54"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Account"
                    android:id="@+id/textView3"
                    android:layout_weight="0.06"
                    android:textColor="#000"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Accountf"
                    android:layout_weight="1"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:padding="10dip"
                android:textColor="#000"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:text="Currency"
                    android:textColor="#000"
                    android:id="@+id/textView4"
                    android:layout_weight="40.20" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner2Currency"
                    android:text="Bank"
                    android:theme="@style/Base.TextAppearance.AppCompat.Button"
                    android:textColor="#000000"
                    android:backgroundTint="#a5a5a5"
                    android:backgroundTintMode="add"
                    android:background="#c2c2c2"
                    android:foregroundTint="#000000"
                    android:foregroundTintMode="add"
                    android:layout_weight="5.21" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#000"
                android:background="@drawable/round_corner_line_dialog"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#000"
                android:background="@drawable/round_corner_line_dialog"
                />




        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatButton
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_action_bank"
                    android:text="Create"
                    android:textSize="12dp"
                    android:layout_gravity="center_horizontal"

                  />



            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
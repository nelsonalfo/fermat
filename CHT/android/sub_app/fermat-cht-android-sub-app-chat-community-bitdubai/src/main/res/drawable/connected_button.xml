<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger green circle in back -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#47bf73"/>
            <size
                android:width="15dp"
                android:height="15dp"/>
        </shape>
    </item>
    <!-- Smaller white circle in front -->
    <item>
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke android:color="@android:color/transparent"
                    android:width="2dp"/>
            <solid android:color="#f8f9f8"/>
            <size
                android:width="10dp"
                android:height="10dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke android:color="@android:color/transparent"
                    android:width="7dp"/>
            <solid android:color="#47bf73"/>
            <size
                android:width="5dp"
                android:height="5dp"/>
        </shape>
    </item>
</layer-list>
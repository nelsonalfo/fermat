<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="0.5"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:id="@+id/icons_container">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            >
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/wallet_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="5dp"
                android:paddingBottom="14dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:paddingLeft="64dp"
                    android:paddingRight="64dp"
                    android:layout_alignParentTop="true"
                    android:layout_column="2"
                    android:src="@drawable/ic_01"

                    />
                <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                    android:text="App Name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/company_text_view"
                    android:layout_below="@+id/image12"
                    android:layout_centerHorizontal="true"
                    android:layout_column="2"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    app:typeface="ROBOTO_REGULAR"
                    android:layout_weight="1"
                    android:textColor="#000" />
            </LinearLayout>
        </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/wallet_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="5dp"
            android:paddingBottom="14dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/image_view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="13sp"
                android:paddingLeft="64dp"
                android:paddingRight="64dp"
                android:layout_alignParentTop="true"
                android:layout_column="2"
                android:src="@drawable/ic_02"

                />
            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:text="App Name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/company_text_view2"
                android:layout_below="@+id/image12"
                android:layout_centerHorizontal="true"
                android:layout_column="2"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="13sp"
                app:typeface="ROBOTO_REGULAR"
                android:layout_weight="1"
                android:textColor="#000" />
        </LinearLayout>
    </RelativeLayout>

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/image_view_icon_4"
            android:layout_weight="1"
            android:padding="7dp"
            android:src="@drawable/ic_04" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/image_view_icon_3"
            android:layout_weight="1"
            android:padding="7dp"
            android:src="@drawable/ic_03" />


        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/image_view_icon_5"
            android:layout_weight="1"
            android:padding="7dp"
            android:src="@drawable/ic_05" />

    </LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transacion_form"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/send_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="7dip"
        android:paddingRight="7dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/frame_tx_record"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp">

                    <ImageView
                        android:id="@+id/profile_Image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="12dp"
                        tools:src="@drawable/ic_profile_male" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="@string/name_text"
                            android:textColor="#12aca1"
                            android:textSize="12sp"
                            />

                        <AutoCompleteTextView
                            android:id="@+id/contact_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:paddingBottom="7dip"
                            android:paddingLeft="14dip"
                            android:paddingRight="14dip"
                            android:paddingTop="20dip"
                            android:ems="10"
                            android:hint="@string/enter_name_here_text"
                            android:textColor="#1d1d26"
                            android:textColorHint="#9a9a9c"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:contextClickable="false"
                            android:textIsSelectable="false"
                            android:background="@null"
                            />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_address"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:orientation="horizontal"
                    android:paddingBottom="3dip"
                    android:paddingLeft="7dip"
                    android:paddingRight="7dip"
                    android:paddingTop="3dip"
                    android:visibility="gone">

                    <EditText android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/address_text"
                        android:paddingBottom="7dip"
                        android:paddingLeft="14dip"
                        android:paddingRight="14dip"
                        android:paddingTop="7dip"
                        android:textColor="#1d1d26"
                        android:textColorHint="#4f4f4f"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/paste_from_clipboard_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:src="@drawable/ic_action_send_now_grey" />

                    <ImageView
                        android:id="@+id/scan_qr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:src="@drawable/ic_action_camera_grey" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#bbccc7"
                    android:visibility="visible"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:paddingTop="12dp"
                        android:text="@string/amount_text"
                        android:textColor="#12aca1"
                        android:textSize="12sp" />

                    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                        android:id="@+id/txt_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:paddingTop="12dp"
                        android:text="@string/btc_text"
                        android:textColor="#12aca1"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="3dip"
                    android:paddingLeft="7dip"
                    android:paddingRight="7dip"
                    android:paddingTop="3dip">

                    <EditText
                        android:id="@+id/amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:background="@null"
                        android:gravity="left"
                        android:hint="@string/balance_amount_0_text"
                        android:inputType="numberDecimal"
                        android:paddingBottom="7dip"
                        android:paddingLeft="14dip"
                        android:paddingRight="14dip"
                        android:paddingTop="7dip"
                        android:state_selected="true"
                        android:textColor="#1d1d26"
                        android:textColorHint="#9a9a9c"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:maxLength="12"
                        />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        >
                    </Spinner>

                    <ImageView
                        android:id="@+id/spinner_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_spinner_arrow" />
                </LinearLayout>




                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#bbccc7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:paddingTop="12dp"
                    android:text="@string/notes_text"
                    android:textColor="#12aca1"
                    android:textSize="12dp"/>

                <LinearLayout
                    android:id="@+id/linear_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dip"
                    android:paddingLeft="7dip"
                    android:paddingRight="7dip"
                    android:paddingTop="3dip">
                    <EditText
                        android:id="@+id/notes"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:background="@null"
                        android:gravity="left"
                        android:hint="@string/reason_text"
                        android:paddingBottom="7dip"
                        android:paddingLeft="14dip"
                        android:paddingRight="14dip"
                        android:paddingTop="7dip"
                        android:state_selected = "false"
                        android:textColor="#4f4f4f"
                        android:textColorHint="#4f4f4f"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:maxLength="25" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#bbccc7"
                    android:visibility="visible"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:id="@+id/advances_btn">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="@string/fee_advances_text"
                        android:textColor="#12aca1"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_arrow_down_expanded"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/feed_advances"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#bbccc7"
                        android:visibility="visible"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:paddingTop="10dp"
                            android:text="@string/fee_amount_text"
                            android:textColor="#12aca1"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="3dip"
                        android:paddingLeft="7dip"
                        android:paddingRight="7dip"
                        android:paddingTop="3dip">

                        <EditText
                            android:id="@+id/feed_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:background="@null"
                            android:gravity="left"
                            android:inputType="numberDecimal"
                            android:paddingBottom="7dip"
                            android:paddingLeft="14dip"
                            android:paddingRight="14dip"
                            android:paddingTop="7dip"
                            android:state_selected="false"
                            android:textColor="#1d1d26"
                            android:textColorHint="#9a9a9c"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:maxLength="12"
                            android:editable="false"
                            android:text= "0.0001"
                            />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"
                            android:id="@+id/checkBoxSubstract"
                            android:checked="true"
                            android:gravity="center_vertical"
                            android:text="@string/fee_option_text"
                            android:textColor="#333"
                            android:textSize="12sp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:paddingTop="0dp"
                            android:text="@string/title_Fee"
                            android:textColor="#12aca1"
                            android:textSize="12sp" />

                        <RadioGroup
                            android:id="@+id/feeGroup"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_column="0"
                            android:layout_span="3">

                            <RadioButton
                                android:id="@+id/fee_low"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fee_low"
                                android:layout_marginRight="0dp"
                                android:textColor="#333"
                                android:textSize="12sp"
                                />
                            <RadioButton
                                android:id="@+id/fee_Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fee_Medium"
                                android:textColor="#333"
                                android:textSize="12sp"/>
                            <RadioButton
                                android:id="@+id/fee_High"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fee_High"
                                android:textColor="#333"
                                android:textSize="12sp"/>
                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>




                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#bbccc7" />

                <LinearLayout
                    android:id="@+id/linear_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:paddingBottom="10dip"
                    android:paddingLeft="7dip"
                    android:paddingRight="7dip"
                    android:paddingTop="3dip">

                    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatButton
                        android:id="@+id/send_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#1173aa"
                        android:clickable="true"
                        android:padding="3dp"
                        android:src="@drawable/ic_action_send_now_grey"
                        android:text="@string/send_text"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>